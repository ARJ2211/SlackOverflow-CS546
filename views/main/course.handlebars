<div onclick="handleOutsideClick(event)" class="w-full h-full flex flex-col justify-between px-6 py-4">

    <!-- Header -->
    <div class="flex items-center justify-between mb-4 border-b pb-2">
        <div>
            <h1 class="text-xl font-semibold text-gray-800">{{title}}

            </h1>
            <p class="text-gray-400 text-sm  flex items-center gap-1">
                <a href="/">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                        class="size-4 hover:text-[#F0BD66] ">
                        <path fill-rule="evenodd"
                            d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z"
                            clip-rule="evenodd" />
                    </svg>
                </a>
                {{path}}
            </p>
        </div>
        <div class="flex gap-2">
            <button onclick="handleFilterDropdown()" id="openFilter"
                class="bg-[#F0BD66] text-white flex items-center font-medium px-5 py-2 rounded-3xl hover:bg-[#e3aa4e] transition">
                Filters

                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5  ml-2">
                    <path fill-rule="evenodd"
                        d="M3.792 2.938A49.069 49.069 0 0 1 12 2.25c2.797 0 5.54.236 8.209.688a1.857 1.857 0 0 1 1.541 1.836v1.044a3 3 0 0 1-.879 2.121l-6.182 6.182a1.5 1.5 0 0 0-.439 1.061v2.927a3 3 0 0 1-1.658 2.684l-1.757.878A.75.75 0 0 1 9.75 21v-5.818a1.5 1.5 0 0 0-.44-1.06L3.13 7.938a3 3 0 0 1-.879-2.121V4.774c0-.897.64-1.683 1.542-1.836Z"
                        clip-rule="evenodd" />
                </svg>

            </button>
        </div>
    </div>

    <!-- Page Content -->
    <div id="courseContainer" data-course-id='{{{selectedCourse}}}'
        class=" flex-1  flex flex-col overflow-y-auto h-full mb-1 w-full gap-4 ">
        {{#if questions.length}}
        {{#each questions}}

        <a href="/main/question/{{this._id}}"
            class="bg-white rounded-3xl shadow-sm py-3 px-6 border border-[#F0BD66] hover:cursor-pointer hover:bg-[#fcfaf6] hover:shadow-md">
            <div class=" flex items-center justify-between mb-2">
                <div class="flex gap-3">
                    {{#each this.labels}}
                    <div key="{{this._id}}" class="border border-[#F0BD66] text-[#F0BD66] text-sm  px-4 rounded-3xl ">
                        {{this.name}}
                    </div>
                    {{/each}}
                </div>
                <div>
                    {{#if (eq this.status "open")}}

                    <div class="border border-green-500 text-green-500 text-sm  px-4 rounded-3xl ">
                        {{this.status}}
                    </div>
                    {{else}}
                    <div class="border border-gray-500 text-gray-500 text-sm  px-4 rounded-3xl ">
                        Closed
                    </div>
                    {{/if}}
                </div>
            </div>

            <div class=" text-lg text-gray-900 mb-2">
                {{{this.question}}}
            </div>



            <div class="flex items-center justify-between text-gray-500 text-sm">
                <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="size-4">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>

                    <span class="font-medium">{{this.user.first_name}} {{this.user.last_name}}</span>
                    <span>asked {{this.timeAgo}}</span>
                </div>

                <div class="flex items-center gap-6">
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.25 12.76c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.076-4.076a1.526 1.526 0 0 1 1.037-.443 48.282 48.282 0 0 0 5.68-.494c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
                        </svg>

                        <span>{{#if this.answer_count}}{{this.answer_count}}{{else}}0{{/if}} answers</span>

                    </div>

                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>


                        <span>{{#if this.views}}{{this.views}}{{else}}0{{/if}} views</span>

                    </div>

                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z" />
                        </svg>

                        <span>{{#if this.votes}}{{this.votes}}{{else}}0{{/if}} votes</span>
                    </div>
                </div>
            </div>
        </a>
        {{/each}}
        {{else}}
        <p class="text-gray-400 text-sm ml-2">No questions found!</p>
        {{/if}}
    </div>


    <div class="">
        <form onsubmit="handleSaveQuestion(event)"
            class="bg-white relative border border-gray-300 rounded-2xl shadow-[5px_5px_5px_-3px_rgba(0,0,0,0.3)] flex flex-col  ">

            <div class="absolute -top-9 left-2 flex items-center  bg-white  rounded-full">
                <div id="labelTags" class="flex items-center justify-center p-1 rounded-full gap-2">
                    {{!-- label tags --}}
                </div>
            </div>

            <div id="editor" class=" pt-1  rounded-t-2xl resize-none focus:outline-none"></div>

            <div id="resizeHandle"
                class=" absolute -top-0 -right-0 hover:-top-1 hover:bg-slate-100 rounded-full p-1 text-gray-400 ">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd"
                        d="M2.25 4.5A.75.75 0 0 1 3 3.75h14.25a.75.75 0 0 1 0 1.5H3a.75.75 0 0 1-.75-.75Zm14.47 3.97a.75.75 0 0 1 1.06 0l3.75 3.75a.75.75 0 1 1-1.06 1.06L18 10.81V21a.75.75 0 0 1-1.5 0V10.81l-2.47 2.47a.75.75 0 1 1-1.06-1.06l3.75-3.75ZM2.25 9A.75.75 0 0 1 3 8.25h9.75a.75.75 0 0 1 0 1.5H3A.75.75 0 0 1 2.25 9Zm0 4.5a.75.75 0 0 1 .75-.75h5.25a.75.75 0 0 1 0 1.5H3a.75.75 0 0 1-.75-.75Z"
                        clip-rule="evenodd" />
                </svg>
            </div>

            <div class="rounded-b-2xl flex items-center justify-between  ">

                <div class="flex items-center">
                    <div class=" relative  ">
                        <div onclick="handleLabelsDropdown()" id="openLabelsDropdown"
                            class=" flex items-center justify-center group hover:cursor-pointer p-1 px-2  mr-4 ">
                            <svg xmlns=" http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                class="size-5 group-hover:text-blue-600 pointer-events-none">
                                <path
                                    d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
                            </svg>

                            <div class="ml-1 text-sm font-medium group-hover:text-blue-600 pointer-events-none ">Labels
                            </div>
                        </div>

                        <div id="labelsDropdown"
                            class="z-10 hidden bottom-8 left-2 absolute bg-white rounded-2xl bg-neutral-primary-medium border border-default-medium rounded-base shadow-lg w-52">
                            <ul class="p-4 text-sm text-body font-medium space-y-4"
                                aria-labelledby="dropdownCheckboxButton">
                                {{#each course.labels}}

                                <li>
                                    <div class="flex items-center">
                                        <input id="{{this._id}}" name="label" onchange="handleLabelsCheckbox(event)"
                                            type="checkbox" value="{{this._id}}" data-label="{{this.name}}"
                                            class="accent-[#F0BD66] w-4 h-4 rounded-md ">
                                        <label for="dropdown-checkbox" class="ms-2 text-sm font-medium text-heading">
                                            {{this.name}}
                                        </label>
                                    </div>
                                </li>
                                {{/each}}

                            </ul>
                        </div>
                    </div>

                    <div class=" hover:cursor-pointer h-fit  -mr-1">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                            class="size-[17px] hover:text-blue-600">
                            <path fill-rule="evenodd"
                                d="M18.97 3.659a2.25 2.25 0 0 0-3.182 0l-10.94 10.94a3.75 3.75 0 1 0 5.304 5.303l7.693-7.693a.75.75 0 0 1 1.06 1.06l-7.693 7.693a5.25 5.25 0 1 1-7.424-7.424l10.939-10.94a3.75 3.75 0 1 1 5.303 5.304L9.097 18.835l-.008.008-.007.007-.002.002-.003.002A2.25 2.25 0 0 1 5.91 15.66l7.81-7.81a.75.75 0 0 1 1.061 1.06l-7.81 7.81a.75.75 0 0 0 1.054 1.068L18.97 6.84a2.25 2.25 0 0 0 0-3.182Z"
                                clip-rule="evenodd" />
                        </svg>
                    </div>

                    <div id="toolbar" class="ql-toolbar  flex items-center gap-2">
                        <span class="ql-formats">
                            <button class="ql-link" title="Insert Link"></button>
                            <button class="ql-image" title="Insert Image"></button>
                            <button class="ql-video" title="Insert Video"></button>
                            <button class="ql-code-block" title="Code Block"></button>
                        </span>
                        <select class="ql-font"></select>

                        <select class="ql-size">
                            <option value="small"></option>
                            <option selected></option>
                            <option value="large"></option>
                            <option value="huge"></option>
                        </select>

                        <span class="ql-formats">
                            <button class="ql-bold"></button>
                            <button class="ql-italic"></button>
                            <button class="ql-underline"></button>
                            <button class="ql-strike"></button>
                        </span>

                        <span class="ql-formats">
                            <select class="ql-color"></select>
                            <select class="ql-background"></select>
                        </span>

                        <span class="ql-formats">
                            <button class="ql-list" value="ordered"></button>
                            <button class="ql-list" value="bullet"></button>
                            <select class="ql-align"></select>
                        </span>

                    </div>
                </div>

                <div class="mr-2">
                    <button type="submit"
                        class="flex justify-center items-center p-0.5 gap-2 px-2 rounded-full text-white bg-[#F0BD66] hover:bg-[#F0AC66]">
                        <div>Ask question</div>
                        <svg class="shrink-0 size-3.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" viewBox="0 0 16 16">
                            <path
                                d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z" />
                        </svg>
                    </button>
                </div>
            </div>
        </form>
    </div>


    {{!-- Modals --}}

    <form onsubmit="handleApplyFilters(event)" id="filterDropdown" class="absolute right-10 top-20 w-72 bg-white rounded-xl shadow-lg border
            opacity-0 scale-95 pointer-events-none transition-all duration-200 z-50">


        <div class="flex items-center justify-between p-4 border-b">
            <h3 class="text-lg font-semibold text-gray-800">Filters</h3>

            <div class="flex items-center gap-4 text-[#F0BD66] text-sm font-medium">
                <button type="submit" class="hover:underline">Save view</button>
                <button type="reset" onclick="handleClearFilters(event)" class="hover:underline">Clear all</button>
            </div>
        </div>


        <div class="p-4">
            <input type="text" name="question" placeholder="Search question..."
                class="w-full px-3 py-2 text-sm border rounded-lg focus:ring focus:ring-[#F0BD66] focus:outline-none  mb-4">

            <div class="">
                <div class="text-sm font-medium text-gray-800 flex justify-between items-center">
                    Labels
                    <span class="text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd"
                                d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                                clip-rule="evenodd" />
                        </svg>

                    </span>
                </div>
                <hr class="my-2">
                <ul class="space-y-2 text-sm h-20 overflow-auto">
                    {{#each course.labels}}
                    <li class="flex items-center gap-2">
                        <input type="checkbox" name="labels[]" value="{{this._id}}" class="w-4 h-4">
                        <label>{{this.name}}</label>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <hr class="my-2">
            <div class="">
                <div class="text-sm font-medium text-gray-800 flex justify-between items-center">
                    Asked by
                    <span class="text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd"
                                d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                                clip-rule="evenodd" />
                        </svg>

                    </span>
                </div>
                <hr class="my-2">
                <input type="text" name="user_name" placeholder="John Snow"
                    class="w-full px-3 py-2 text-sm border rounded-lg focus:ring focus:ring-[#F0BD66] focus:outline-none ">
            </div>
            <hr class="my-2">
            <div class="">
                <div class="text-sm font-medium text-gray-800 flex justify-between items-center">
                    Status
                    <span class="text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd"
                                d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                                clip-rule="evenodd" />
                        </svg>

                    </span>
                </div>
                <hr class="my-2">
                <div class="flex items-center gap-3">

                    <label class="relative inline-block w-10 h-5 cursor-pointer">
                        <input type="checkbox" name="status_open" class="peer sr-only">
                        <span
                            class="absolute inset-0 bg-gray-300 rounded-full peer-checked:bg-[#F0BD66] transition"></span>
                        <span
                            class="absolute left-0.5 top-0.5 w-4 h-4 bg-white rounded-full shadow peer-checked:translate-x-5 transition"></span>
                    </label>

                    <span class="text-sm font-medium text-gray-500">Open</span>

                </div>
                <div class="flex items-center gap-3 mt-2">

                    <label class="relative inline-block w-10 h-5 cursor-pointer">
                        <input type="checkbox" name="status_closed" class="peer sr-only">
                        <span
                            class="absolute inset-0 bg-gray-300 rounded-full peer-checked:bg-[#F0BD66] transition"></span>
                        <span
                            class="absolute left-0.5 top-0.5 w-4 h-4 bg-white rounded-full shadow peer-checked:translate-x-5 transition"></span>
                    </label>

                    <span class="text-sm font-medium text-gray-500">Closed</span>

                </div>
            </div>
        </div>
    </form>















    <script src="/public/js/course.js"></script>


</div>