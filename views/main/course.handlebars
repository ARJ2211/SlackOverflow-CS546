<div onclick="handleOutsideClick(event)" class="relative w-full h-full flex flex-col justify-between px-6 py-4">

    <!-- Header -->
    <div class="flex items-center justify-between mb-4 border-b pb-3">
        <div>
            <h1 class="text-xl font-semibold text-gray-800">
                {{title}}
            </h1>
            <p class="text-gray-400 text-sm flex items-center gap-1 mt-1">
                <a href="/" class="inline-flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                        class="size-4 hover:text-[#F0BD66]">
                        <path fill-rule="evenodd"
                            d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z"
                            clip-rule="evenodd" />
                    </svg>
                </a>
                <span>{{path}}</span>
            </p>
        </div>

        <div class="flex gap-2">
            <button onclick="handleFilterDropdown(event)" id="openFilter"
                class="bg-primary text-white flex items-center font-medium px-5 py-2 rounded-3xl hover:bg-[#e3aa4e] transition">
                <span>Filters</span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                    class="size-5 pointer-events-none ml-2">
                    <path fill-rule="evenodd"
                        d="M3.792 2.938A49.069 49.069 0 0 1 12 2.25c2.797 0 5.54.236 8.209.688a1.857 1.857 0 0 1 1.541 1.836v1.044a3 3 0 0 1-.879 2.121l-6.182 6.182a1.5 1.5 0 0 0-.439 1.061v2.927a3 3 0 0 1-1.658 2.684l-1.757.878A.75.75 0 0 1 9.75 21v-5.818a1.5 1.5 0 0 0-.44-1.06L3.13 7.938a3 3 0 0 1-.879-2.121V4.774c0-.897.64-1.683 1.542-1.836Z"
                        clip-rule="evenodd" />
                </svg>
            </button>
            <div class=" items-center gap-4 hidden" id="similarView">
                <p class="text-lg font-medium"> Viewing similar questions </p>
                <button onclick="handleResetQuestionsView()" id="resetButton"
                    class="bg-primary text-white flex items-center font-medium px-5 py-2 rounded-3xl hover:bg-[#e3aa4e] transition">
                    <span>Reset</span>

                    <svg class="size-5 pointer-events-none ml-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                        viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 0 0-3.7-3.7 48.678 48.678 0 0 0-7.324 0 4.006 4.006 0 0 0-3.7 3.7c-.017.22-.032.441-.046.662M19.5 12l3-3m-3 3-3-3m-12 3c0 1.232.046 2.453.138 3.662a4.006 4.006 0 0 0 3.7 3.7 48.656 48.656 0 0 0 7.324 0 4.006 4.006 0 0 0 3.7-3.7c.017-.22.032-.441.046-.662M4.5 12l3 3m-3-3-3 3" />
                    </svg>

                </button>
            </div>
        </div>
    </div>

    <!-- Page Content -->
    <div id="courseContainer" data-course-id='{{{selectedCourse}}}'
        class="flex-1 flex flex-col overflow-y-auto h-full mb-1 pb-8 w-full gap-3 pt-2">

        {{#if questions.length}}
        {{#each questions}}

        <a id="question-{{this._id}}" href="/main/question/{{this._id}}"
            class="bg-white rounded-3xl shadow-sm py-3 px-6 border border-primary hover:border-primary hover:shadow-md hover:-translate-y-[1px] transition cursor-pointer">
            <div class="flex items-center justify-between mb-2">
                <div class="flex flex-wrap gap-2">
                    {{#each this.labels}}
                    <div class="border border-primary text-primary text-xs px-3 py-0.5 rounded-2xl bg-secondary">
                        {{this.name}}
                    </div>
                    {{/each}}
                </div>

                <div class="flex items-center justify-center gap-4">

                    <div class="status-container w-20 text-center">
                        {{#if (eq this.status "open")}}
                        <div class="border border-green-500 text-green-500 text-xs px-4 py-0.5 rounded-2xl bg-green-50">
                            open
                        </div>
                        {{else}}
                        <div class="border border-gray-400 text-gray-500 text-xs px-4 py-0.5 rounded-2xl bg-gray-50">
                            closed
                        </div>
                        {{/if}}
                    </div>
                    <div>
                        {{#if this.hasBookmarked}}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                            class="size-4 text-[#F0BD66]">
                            <path fill-rule="evenodd"
                                d="M6.32 2.577a49.255 49.255 0 0 1 11.36 0c1.497.174 2.57 1.46 2.57 2.93V21a.75.75 0 0 1-1.085.67L12 18.089l-7.165 3.583A.75.75 0 0 1 3.75 21V5.507c0-1.47 1.073-2.756 2.57-2.93Z"
                                clip-rule="evenodd" />
                        </svg>
                        {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4 text-gray-400">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
                        </svg>
                        {{/if}}
                    </div>
                </div>
            </div>

            <div class="text-sm text-gray-900 mb-2 line-clamp-3">
                {{{this.question}}}
            </div>

            <div class="flex items-center justify-between text-gray-500 text-xs">
                <div class="flex items-center gap-2">
                    {{#if (eqStr this.question.user_id user.id)}}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                        class="size-4 rounded-full text-[#F0BD66]">
                        <path
                            d="M10 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM3.465 14.493a1.23 1.23 0 0 0 .41 1.412A9.957 9.957 0 0 0 10 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 0 0-13.074.003Z" />
                    </svg>
                    {{else}}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="size-4 text-gray-400">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>
                    {{/if}}

                    <span class="font-medium text-gray-700">
                        {{this.user.first_name}} {{this.user.last_name}} ({{this.user.role}})
                    </span>
                    <span class="text-gray-400">asked {{this.timeAgo}}</span>
                </div>

                <div class="flex items-center gap-5">
                    <div class="flex items-center gap-1.5">
                        {{#if this.hasAnswered}}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            class="size-4 text-[#F0BD66]">
                            <path fill-rule="evenodd"
                                d="M10 2c-2.236 0-4.43.18-6.57.524C1.993 2.755 1 4.014 1 5.426v5.148c0 1.413.993 2.67 2.43 2.902.848.137 1.705.248 2.57.331v3.443a.75.75 0 0 0 1.28.53l3.58-3.579a.78.78 0 0 1 .527-.224 41.202 41.202 0 0 0 5.183-.5c1.437-.232 2.43-1.49 2.43-2.903V5.426c0-1.413-.993-2.67-2.43-2.902A41.289 41.289 0 0 0 10 2Zm0 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM8 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0Zm5 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z"
                                clip-rule="evenodd" />
                        </svg>
                        {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4 text-gray-400">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.25 12.76c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.076-4.076a1.526 1.526 0 0 1 1.037-.443 48.282 48.282 0 0 0 5.68-.494c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
                        </svg>
                        {{/if}}
                        <span>{{#if this.answer_count}}{{this.answer_count.length}}{{else}}0{{/if}} answers</span>
                    </div>

                    <div class="flex items-center gap-1.5">
                        {{#if this.hasViewed}}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            class="size-4 text-[#F0BD66]">
                            <path d="M10 12.5a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                            <path fill-rule="evenodd"
                                d="M.664 10.59a1.651 1.651 0 0 1 0-1.186A10.004 10.004 0 0 1 10 3c4.257 0 7.893 2.66 9.336 6.41.147.381.146.804 0 1.186A10.004 10.004 0 0 1 10 17c-4.257 0-7.893-2.66-9.336-6.41ZM14 10a4 4 0 1 1-8 0 4 4 0 0 1 8 0Z"
                                clip-rule="evenodd" />
                        </svg>
                        {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4 text-gray-400">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                        {{/if}}
                        <span>{{#if this.views}}{{this.views.length}}{{else}}0{{/if}} views</span>
                    </div>

                    <div class="flex items-center gap-1.5">
                        {{#if this.hasUpvoted}}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            class="size-4 text-[#F0BD66]">
                            <path
                                d="M1 8.25a1.25 1.25 0 1 1 2.5 0v7.5a1.25 1.25 0 1 1-2.5 0v-7.5ZM11 3V1.7c0-.268.14-.526.395-.607A2 2 0 0 1 14 3c0 .995-.182 1.948-.514 2.826-.204.54.166 1.174.744 1.174h2.52c1.243 0 2.261 1.01 2.146 2.247a23.864 23.864 0 0 1-1.341 5.974C17.153 16.323 16.072 17 14.9 17h-3.192a3 3 0 0 1-1.341-.317l-2.734-1.366A3 3 0 0 0 6.292 15H5V8h.963c.685 0 1.258-.483 1.612-1.068a4.011 4.011 0 0 1 2.166-1.73c.432-.143.853-.386 1.011-.814.16-.432.248-.9.248-1.388Z" />
                        </svg>
                        {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4 text-gray-400">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z" />
                        </svg>
                        {{/if}}
                        <span>{{#if this.up_votes}}{{this.up_votes.length}}{{else}}0{{/if}} votes</span>
                    </div>
                </div>
            </div>
        </a>

        {{/each}}
        {{else}}
        <div class="text-gray-400 w-full h-full flex flex-col justify-center items-center">
            <img src="/public/images/emptyContent.png" alt="No Questions" class="w-[400px] h-[350px] mb-4">
        </div>
        {{/if}}
    </div>

    <!-- Ask question -->
    <div class="mt-3 border-red-300 ">
        <form onsubmit="handleSaveQuestion(event)"
            class="bg-white relative border border-gray-300 rounded-2xl shadow-md flex flex-col">

            <div class="absolute -top-9 left-2 flex items-center bg-white rounded-full px-2 py-1">
                <div id="labelTags" class="flex items-center justify-center rounded-full gap-2 text-xs">
                    {{!-- label tags --}}
                </div>
            </div>

            <!-- Bigger editor box -->
            <div id="questionEditor"
                class="pt-2  rounded-t-2xl resize-none focus:outline-none min-h-[150px] max-h-[320px] overflow-y-auto text-sm">
            </div>

            <div id="questionResizeHandle"
                class="absolute -top-0 -right-0 hover:cursor-ns-resize rounded-full p-1 text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                    class="size-5 pointer-events-none">
                    <path fill-rule="evenodd"
                        d="M10.53 3.47a.75.75 0 0 0-1.06 0L6.22 6.72a.75.75 0 0 0 1.06 1.06L10 5.06l2.72 2.72a.75.75 0 1 0 1.06-1.06l-3.25-3.25Zm-4.31 9.81 3.25 3.25a.75.75 0 0 0 1.06 0l3.25-3.25a.75.75 0 1 0-1.06-1.06L10 14.94l-2.72-2.72a.75.75 0 0 0-1.06 1.06Z"
                        clip-rule="evenodd" />
                </svg>
            </div>

            <div class="rounded-b-2xl flex items-center justify-between px-2">
                <div class="flex items-center">
                    <div class="relative mr-3">
                        <div onclick="handleLabelsDropdown()" id="openLabelsDropdown"
                            class="flex items-center justify-center group hover:cursor-pointer px-2 py-1 rounded-full hover:bg-gray-100">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                class="size-5 group-hover:text-blue-600 pointer-events-none">
                                <path
                                    d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
                            </svg>
                            <div class="ml-1 text-xs font-medium group-hover:text-blue-600 pointer-events-none">
                                Labels
                            </div>
                        </div>

                        <div id="labelsDropdown"
                            class="z-10 hidden bottom-8 left-2 absolute bg-white rounded-2xl border shadow-lg w-52">
                            <ul class="p-4 text-sm text-body font-medium space-y-3 max-h-56 overflow-auto">
                                {{#each course.labels}}
                                <li>
                                    <div class="flex items-center gap-2">
                                        <input id="{{this._id}}" name="label" onchange="handleLabelsCheckbox(event)"
                                            type="checkbox" value="{{this._id}}" data-label="{{this.name}}"
                                            class="accent-primary w-4 h-4 rounded-md">
                                        <label for="{{this._id}}" class="text-sm font-medium text-heading">
                                            {{this.name}}
                                        </label>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>

                    <div class="hover:cursor-pointer h-fit -mr-1">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                            class="size-[17px] hover:text-blue-600">
                            <path fill-rule="evenodd"
                                d="M18.97 3.659a2.25 2.25 0 0 0-3.182 0l-10.94 10.94a3.75 3.75 0 1 0 5.304 5.303l7.693-7.693a.75.75 0 0 1 1.06 1.06l-7.693 7.693a5.25 5.25 0 1 1-7.424-7.424l10.939-10.94a3.75 3.75 0 1 1 5.303 5.304L9.097 18.835l-.008.008-.007.007-.002.002-.003.002A2.25 2.25 0 0 1 5.91 15.66l7.81-7.81a.75.75 0 0 1 1.061 1.06l-7.81 7.81a.75.75 0 0 0 1.054 1.068L18.97 6.84a2.25 2.25 0 0 0 0-3.182Z"
                                clip-rule="evenodd" />
                        </svg>
                    </div>

                    <div id="toolbar" class="ql-toolbar flex items-center gap-2 ml-1">
                        <span class="ql-formats">
                            <button class="ql-link" title="Insert Link"></button>
                            <button class="ql-image" title="Insert Image"></button>
                            <button class="ql-video" title="Insert Video"></button>
                            <button class="ql-code-block" title="Code Block"></button>
                        </span>

                        <select class="ql-font"></select>

                        <select class="ql-size">
                            <option value="small">small</option>
                            <option selected>Normal</option>
                            <option value="large">large</option>
                            <option value="huge">huge</option>
                        </select>

                        <span class="ql-formats">
                            <button class="ql-bold"></button>
                            <button class="ql-italic"></button>
                            <button class="ql-underline"></button>
                            <button class="ql-strike"></button>
                        </span>

                        <span class="ql-formats">
                            <select class="ql-color"></select>
                            <select class="ql-background"></select>
                        </span>

                        <span class="ql-formats">
                            <button class="ql-list" value="ordered"></button>
                            <button class="ql-list" value="bullet"></button>
                            <select class="ql-align"></select>
                        </span>
                    </div>
                </div>

                <div class="mr-2">
                    <button type="submit"
                        class="flex justify-center items-center p-0.5 gap-2 px-3 py-1.5 rounded-full text-white bg-primary hover:bg-[#F0AC66] text-sm">
                        <span>Ask question</span>
                        <svg class="shrink-0 size-3.5 pointer-events-none" xmlns="http://www.w3.org/2000/svg" width="16"
                            height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path
                                d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z" />
                        </svg>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Filters dropdown -->
    <form onsubmit="handleApplyFilters(event)" id="filterDropdown"
        class="absolute right-10 top-20 w-72 bg-white rounded-xl shadow-lg border opacity-0 scale-95 pointer-events-none transition-all duration-200 z-50">

        <div class="flex items-center justify-between p-4 border-b">
            <h3 class="text-lg font-semibold text-gray-800">Filters</h3>

            <div class="flex items-center gap-4 text-primary text-xs font-medium">
                <button type="submit" class="hover:underline">Save view</button>
                <button type="reset" onclick="handleClearFilters(event)" class="hover:underline">Clear all</button>
            </div>
        </div>

        <div class="p-4 space-y-4">
            <input type="text" name="question" placeholder="Search question..."
                class="w-full px-3 py-2 text-sm border rounded-lg focus:ring focus:ring-primary focus:outline-none">

            <div>
                <div class="text-sm font-medium text-gray-800 flex justify-between items-center">
                    <span>Labels</span>
                    <span class="text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd"
                                d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                                clip-rule="evenodd" />
                        </svg>
                    </span>
                </div>
                <hr class="my-2">
                <ul class="space-y-2 text-sm h-20 overflow-auto">
                    {{#each course.labels}}
                    <li class="flex items-center gap-2">
                        <input type="checkbox" name="labels[]" value="{{this._id}}" class="w-4 h-4">
                        <label>{{this.name}}</label>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div>
                <div class="text-sm font-medium text-gray-800 flex justify-between items-center">
                    <span>Asked by</span>
                    <span class="text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd"
                                d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                                clip-rule="evenodd" />
                        </svg>
                    </span>
                </div>
                <hr class="my-2">
                <input type="text" name="user_name" placeholder="John Snow"
                    class="w-full px-3 py-2 text-sm border rounded-lg focus:ring focus:ring-primary focus:outline-none">
            </div>

            <div>
                <div class="text-sm font-medium text-gray-800 flex justify-between items-center">
                    <span>Status</span>
                    <span class="text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd"
