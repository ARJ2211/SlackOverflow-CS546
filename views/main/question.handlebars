<div onclick="handleOutsideClick(event)" class="w-full h-full flex flex-col px-6 py-4">
    <!-- Header -->
    <div class="flex items-center justify-between mb-4 border-b pb-2">
        <div class="flex items-start gap-4">
            <a href="/main/courses/{{course._id}}" class="mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                    class="size-9 text-gray-400 opacity-70 hover:opacity-100  hover:text-[#F0BD66] hover:cursor-pointer">
                    <path fill-rule="evenodd"
                        d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm-4.28 9.22a.75.75 0 0 0 0 1.06l3 3a.75.75 0 1 0 1.06-1.06l-1.72-1.72h5.69a.75.75 0 0 0 0-1.5h-5.69l1.72-1.72a.75.75 0 0 0-1.06-1.06l-3 3Z"
                        clip-rule="evenodd" />
                </svg>

            </a>
            <div>
                <h1 class="text-xl font-semibold text-gray-800">{{title}}

                </h1>
                <p class="text-gray-400 text-sm  flex items-center gap-1">
                    <a href="/">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            class="size-4 hover:text-[#F0BD66] ">
                            <path fill-rule="evenodd"
                                d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z"
                                clip-rule="evenodd" />
                        </svg>
                    </a>
                    {{path}}
                </p>
            </div>
        </div>

    </div>

    <!-- Page Content -->
    <div id="questionContainer" data-course-id='{{course._id}}' data-question-id='{{question._id}}'
        data-question-status="{{question.status}}" class=" flex-1  flex flex-col overflow-y-auto h-[88%] w-full gap-4 ">
        {{!-- question card--}}
        <div class="bg-white rounded-3xl shadow-sm py-2 px-6 border border-[#F0BD66] ">
            {{!-- question card header --}}
            <div class=" flex items-center justify-between mb-1">
                {{!-- labels --}}
                <div class="flex gap-3">
                    {{#each question.labels}}
                    <div key="{{this._id}}" class="border border-[#F0BD66] text-[#F0BD66] text-sm  px-4 rounded-3xl ">
                        {{this.name}}
                    </div>
                    {{/each}}
                </div>
                {{!-- status , bookmark and actions --}}
                <div class="flex items-center justify-center gap-4">
                    {{#if (or (eq user.role "professor") isTa) }}
                    <div>
                        <label class="relative inline-flex cursor-pointer items-center">
                            <input type="checkbox" value="" {{#if (eq question.status "open" )}} checked {{/if}}
                                class="peer sr-only" onchange="handleUpdateStatus(event)" />
                            <div
                                class="peer flex h-7 items-center gap-4 rounded-full bg-gray-500 px-3 after:absolute after:left-[5px] after: after:h-5 after:w-12 after:rounded-full after:bg-white/40 after:transition-all after:content-[''] peer-checked:bg-green-500 peer-checked:after:translate-x-full peer-focus:outline-none  text-sm text-white">
                                <span>close</span>
                                <span>open</span>
                            </div>
                        </label>
                    </div>
                    {{else}}
                    <div class="w-20 text-center">
                        {{#if (eq question.status "open")}}

                        <div class="border border-green-500 text-green-500 text-sm  px-4 rounded-3xl ">
                            open
                        </div>
                        {{else}}
                        <div class="border border-gray-500 text-gray-500 text-sm  px-4 rounded-3xl ">
                            closed
                        </div>
                        {{/if}}
                    </div>

                    {{/if}}

                    <div>

                        {{#if this.hasBookmarked}}
                        <svg onclick="handleToggleBookmark(event)" xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24" fill="currentColor"
                            class="size-4 hover:cursor-pointer text-[#F0BD66] hover:scale-125">
                            <path fill-rule="evenodd"
                                d="M6.32 2.577a49.255 49.255 0 0 1 11.36 0c1.497.174 2.57 1.46 2.57 2.93V21a.75.75 0 0 1-1.085.67L12 18.089l-7.165 3.583A.75.75 0 0 1 3.75 21V5.507c0-1.47 1.073-2.756 2.57-2.93Z"
                                clip-rule="evenodd" />
                        </svg>

                        {{else}}
                        <svg onclick="handleToggleBookmark(event)" xmlns="http://www.w3.org/2000/svg" fill="none"
                            viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                            class="size-4 hover:cursor-pointer hover:text-[#F0BD66] hover:scale-125">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
                        </svg>
                        {{/if}}
                    </div>

                    {{#if (eqStr user.id question.user_id)}}
                    <div class="relative">
                        <div onclick="handleQuestionActionsDropdown()" id="openQuestionActionsDropdown"
                            class="hover:cursor-pointer hover:bg-gray-100 rounded-md p-1 w-fit">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="size-6 pointer-events-none">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M6.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM12.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM18.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
                            </svg>
                        </div>
                        <div id="questionActionsDropdown"
                            class="z-50 absolute hidden right-0 top-6 bg-white rounded-2xl bg-neutral-primary-medium border border-default-medium rounded-base shadow-lg w-28">
                            <ul class="p-3 text-sm text-body font-medium space-y-1">

                                <li onclick="handleUpdateQuestionModal(),handleQuestionActionsDropdown()"
                                    class=" text-sm font-medium text-heading hover:bg-gray-100 hover:cursor-pointer rounded-md p-1">
                                    Edit
                                </li>
                                <li onclick="handleDeleteQuestion(event)"
                                    class=" text-sm font-medium text-heading hover:bg-gray-100 hover:cursor-pointer rounded-md p-1">
                                    Delete
                                </li>

                            </ul>
                        </div>

                    </div>
                    {{/if}}

                </div>
            </div>

            {{!-- question --}}
            <div class="questionContainer" id="questionDisplay" data-question_obj="{{json question}}"
                data-question='{{ question.question_delta }}'></div>


            {{!-- question card footer --}}
            <div class="flex items-center justify-between text-gray-500 text-sm">
                <div class="flex items-center gap-2">
                    {{#if (eqStr question.user_id user.id)}}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                        class=" size-4 rounded-full text-[#F0BD66]">
                        <path
                            d="M10 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM3.465 14.493a1.23 1.23 0 0 0 .41 1.412A9.957 9.957 0 0 0 10 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 0 0-13.074.003Z" />
                    </svg>
                    {{else}}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="size-4 ">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>
                    {{/if}}


                    <span class="font-medium">{{question.user.first_name}} {{question.user.last_name}}</span>
                    <span>asked {{question.timeAgo}}</span>
                </div>

                <div class="flex items-center gap-6">
                    <div class="flex items-center gap-2">

                        {{#if this.hasAnswered}}

                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            class="size-4 text-[#F0BD66]">
                            <path fill-rule="evenodd"
                                d="M10 2c-2.236 0-4.43.18-6.57.524C1.993 2.755 1 4.014 1 5.426v5.148c0 1.413.993 2.67 2.43 2.902.848.137 1.705.248 2.57.331v3.443a.75.75 0 0 0 1.28.53l3.58-3.579a.78.78 0 0 1 .527-.224 41.202 41.202 0 0 0 5.183-.5c1.437-.232 2.43-1.49 2.43-2.903V5.426c0-1.413-.993-2.67-2.43-2.902A41.289 41.289 0 0 0 10 2Zm0 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM8 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0Zm5 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z"
                                clip-rule="evenodd" />
                        </svg>

                        {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.25 12.76c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.076-4.076a1.526 1.526 0 0 1 1.037-.443 48.282 48.282 0 0 0 5.68-.494c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
                        </svg>
                        {{/if}}



                        <span>{{#if question.answer_count}}{{question.answer_count.length}}{{else}}0{{/if}}
                            answers</span>

                    </div>

                    <div class="flex items-center gap-2">
                        {{#if this.hasViewed}}

                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            class="size-4 text-[#F0BD66] ">
                            <path d="M10 12.5a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                            <path fill-rule="evenodd"
                                d="M.664 10.59a1.651 1.651 0 0 1 0-1.186A10.004 10.004 0 0 1 10 3c4.257 0 7.893 2.66 9.336 6.41.147.381.146.804 0 1.186A10.004 10.004 0 0 1 10 17c-4.257 0-7.893-2.66-9.336-6.41ZM14 10a4 4 0 1 1-8 0 4 4 0 0 1 8 0Z"
                                clip-rule="evenodd" />
                        </svg>

                        {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                        {{/if}}


                        <span>{{#if views}}{{views.length}}{{else}}0{{/if}} views</span>

                    </div>

                    <div class="flex items-center gap-2">
                        {{#if hasUpvoted}}
                        <svg onclick="handleUpdateUpVote(event)" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                            fill="currentColor" class="size-4 hover:cursor-pointer text-[#F0BD66] hover:scale-125">
                            <path
                                d="M1 8.25a1.25 1.25 0 1 1 2.5 0v7.5a1.25 1.25 0 1 1-2.5 0v-7.5ZM11 3V1.7c0-.268.14-.526.395-.607A2 2 0 0 1 14 3c0 .995-.182 1.948-.514 2.826-.204.54.166 1.174.744 1.174h2.52c1.243 0 2.261 1.01 2.146 2.247a23.864 23.864 0 0 1-1.341 5.974C17.153 16.323 16.072 17 14.9 17h-3.192a3 3 0 0 1-1.341-.317l-2.734-1.366A3 3 0 0 0 6.292 15H5V8h.963c.685 0 1.258-.483 1.612-1.068a4.011 4.011 0 0 1 2.166-1.73c.432-.143.853-.386 1.011-.814.16-.432.248-.9.248-1.388Z" />
                        </svg>
                        {{else}}
                        <svg onclick="handleUpdateUpVote(event)" xmlns="http://www.w3.org/2000/svg" fill="none"
                            viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                            class="size-4 hover:cursor-pointer hover:text-[#F0BD66] hover:scale-125">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z" />
                        </svg>
                        {{/if}}
                        <span>{{#if question.up_votes}}{{question.up_votes.length}}{{else}}0{{/if}} votes</span>
                    </div>
                </div>
            </div>
        </div>


        {{!-- answer cards --}}
        <div class=" py-4 pb-6 divide-y divide-gray-200 flex flex-col ">

            {{#if answers.length}}
            {{#each answers}}
            <div class="p-6 text-base  rounded-lg ">
                <div class="flex justify-between items-center mb-2">
                    <div class="flex items-center">
                        <p class="inline-flex items-center mr-3 text-sm text-gray-800  ">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                class="mr-2 size-4 rounded-full {{#if (eqStr this.user_id ../user.id)}}text-[#F0BD66]{{/if}}">
                                <path
                                    d="M10 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM3.465 14.493a1.23 1.23 0 0 0 .41 1.412A9.957 9.957 0 0 0 10 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 0 0-13.074.003Z" />
                            </svg>

                            {{this.user.first_name}} {{this.user.last_name}}

                        </p>
                        <p class="text-sm text-gray-500 ">posted {{this.timeAgo}}</p>
                    </div>

                    <div class="relative actionContainer flex items-center gap-2">
                        {{#if this.is_accepted}}
                        <div class="flex items-center gap-2 text-sm text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                class="size-4 text-[#F0BD66]">
                                <path fill-rule="evenodd"
                                    d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
                                    clip-rule="evenodd" />
                            </svg>
                            accepted
                        </div>
                        {{/if}}

                        {{#if (or (eqStr ../user.id this.user_id) (or (eq ../user.role "professor") ../isTa))}}

                        <div onclick="handleActionsDropdown('actionsDropdown-'+'{{ json this._id}}')"
                            id="openActionsDropdown-{{json this._id}}"
                            class="openActionsDropdown hover:cursor-pointer hover:bg-gray-100 rounded-md p-1 w-fit">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                class="size-5 pointer-events-none">
                                <path
                                    d="M3 10a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0ZM8.5 10a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0ZM15.5 8.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z" />
                            </svg>
                        </div>
                        {{/if}}
                        <div id="actionsDropdown-{{json this._id}}"
                            class="actionsDropdown z-50 absolute hidden right-0 top-6 bg-white rounded-2xl bg-neutral-primary-medium border border-default-medium rounded-base shadow-lg w-28">
                            <ul class="p-3 text-sm text-body font-medium space-y-1">
                                {{#if (and (eqStr ../user.id this.user_id) (not this.is_accepted))}}
                                <li onclick="handleUpdateAnswerModal({{json this}}),handleActionsDropdown('actionsDropdown-'+'{{ json this._id}}')"
                                    class=" text-sm font-medium text-heading hover:bg-gray-100 hover:cursor-pointer rounded-md p-1">
                                    Edit
                                </li>
                                <li onclick="handleDeleteAnswer({{json this._id}})"
                                    class=" text-sm font-medium text-heading hover:bg-gray-100 hover:cursor-pointer rounded-md p-1">
                                    Delete
                                </li>

                                {{/if}}
                                {{#if (or (eq ../user.role "professor") ../isTa)}}

                                {{#if this.is_accepted}}
                                <li onclick="handleRejectAnswer({{json this._id}})"
                                    class="text-sm font-medium text-heading hover:bg-gray-100 hover:cursor-pointer rounded-md p-1">
                                    Reject
                                </li>
                                {{else}}
                                <li onclick="handleAcceptAnswer({{json this._id}})"
                                    class="text-sm font-medium text-heading hover:bg-gray-100 hover:cursor-pointer rounded-md p-1">
                                    Accept
                                </li>
                                {{/if}}

                                {{/if}}
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="answerContainer" id="answerDisplay-{{this._id}}" data-answer='{{this.answer_delta}}'></div>

            </div>
            {{/each}}
            {{else}}
            <div class="text-gray-400  w-full h-full flex flex-col justify-center items-center ">
                <img src="/public/images/emptyContent.png" alt="No Questions" class=" w-[300px] h-[250px]  mb-4">
                {{!-- <div class="text-2xl text-gray-500 font-medium font-mono ">Be the first to answer!</div> --}}
            </div>
            {{/if}}

        </div>
    </div>

    {{!-- answer editor input filed --}}
    <div class="">
        <form onsubmit="handleSaveAnswer(event)"
            class="bg-white relative border border-gray-300 rounded-2xl shadow-md flex flex-col  ">


            <div id="answerEditor" class=" pt-1  rounded-t-2xl resize-none focus:outline-none"></div>


            <div id="answerResizeHandle"
                class=" absolute -top-0 -right-0  hover:cursor-ns-resize  rounded-full p-1 text-gray-400 ">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                    class="size-5 pointer-events-none">
                    <path fill-rule="evenodd"
                        d="M10.53 3.47a.75.75 0 0 0-1.06 0L6.22 6.72a.75.75 0 0 0 1.06 1.06L10 5.06l2.72 2.72a.75.75 0 1 0 1.06-1.06l-3.25-3.25Zm-4.31 9.81 3.25 3.25a.75.75 0 0 0 1.06 0l3.25-3.25a.75.75 0 1 0-1.06-1.06L10 14.94l-2.72-2.72a.75.75 0 0 0-1.06 1.06Z"
                        clip-rule="evenodd" />
                </svg>
            </div>

            <div class="rounded-b-2xl flex items-center justify-between  ">

                <div class="flex items-center ml-2">

                    <div class=" hover:cursor-pointer h-fit  -mr-1">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                            class="size-[17px] hover:text-blue-600">
                            <path fill-rule="evenodd"
                                d="M18.97 3.659a2.25 2.25 0 0 0-3.182 0l-10.94 10.94a3.75 3.75 0 1 0 5.304 5.303l7.693-7.693a.75.75 0 0 1 1.06 1.06l-7.693 7.693a5.25 5.25 0 1 1-7.424-7.424l10.939-10.94a3.75 3.75 0 1 1 5.303 5.304L9.097 18.835l-.008.008-.007.007-.002.002-.003.002A2.25 2.25 0 0 1 5.91 15.66l7.81-7.81a.75.75 0 0 1 1.061 1.06l-7.81 7.81a.75.75 0 0 0 1.054 1.068L18.97 6.84a2.25 2.25 0 0 0 0-3.182Z"
                                clip-rule="evenodd" />
                        </svg>
                    </div>

                    <div id="toolbar" class="ql-toolbar  flex items-center gap-2">
                        <span class="ql-formats">
                            <button class="ql-link" title="Insert Link"></button>
                            <button class="ql-image" title="Insert Image"></button>
                            <button class="ql-video" title="Insert Video"></button>
                            <button class="ql-code-block" title="Code Block"></button>
                        </span>
                        <select class="ql-font"></select>

                        <select class="ql-size">
                            <option value="small"></option>
                            <option selected></option>
                            <option value="large"></option>
                            <option value="huge"></option>
                        </select>

                        <span class="ql-formats">
                            <button class="ql-bold"></button>
                            <button class="ql-italic"></button>
                            <button class="ql-underline"></button>
                            <button class="ql-strike"></button>
                        </span>

                        <span class="ql-formats">
                            <select class="ql-color"></select>
                            <select class="ql-background"></select>
                        </span>

                        <span class="ql-formats">
                            <button class="ql-list" value="ordered"></button>
                            <button class="ql-list" value="bullet"></button>
                            <select class="ql-align"></select>
                        </span>

                    </div>
                </div>

                <div class="mr-2">
                    <button type="submit"
                        class="flex justify-center items-center p-0.5 gap-2 px-2 rounded-full text-white bg-[#F0BD66] hover:bg-[#F0AC66]">
                        <div>Comment</div>
                        <svg class="shrink-0 size-3.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
