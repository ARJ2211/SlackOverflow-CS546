<div class="w-1/4 bg-[#F9FAFE] flex flex-col justify-between  p-6 pr-2 ">
    <div>
        <h2 class="text-gray-700 font-semibold mb-1">SlackOverflow</h2>
        <p class="text-gray-400 text-sm mb-6">{{page}}</p>


        <div class="space-y-3 overflow-y-auto min-h-[85%] pb-2 ">
            <a href="/main/dashboard"
                class="w-full text-left block  shadow-md  rounded-xl px-4 py-3 flex items-center justify-between {{#if (eq page 'Dashboard')}} bg-[#F0BD66] text-white {{else}} bg-white text-gray-700 hover:bg-gray-100{{/if}}">


                <span class="flex items-center  font-medium">

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5 mr-2  {{#if (eq page 'Dashboard')}}text-white {{else}}text-gray-400{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M3.75 3v11.25A2.25 2.25 0 0 0 6 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0 1 18 16.5h-2.25m-7.5 0h7.5m-7.5 0-1 3m8.5-3 1 3m0 0 .5 1.5m-.5-1.5h-9.5m0 0-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
                    </svg>

                    Dashboard
                </span>
            </a>


            <div id="courses-toggle"
                class="w-full text-left block  shadow-md hover:cursor-pointer  rounded-xl px-4 py-3 flex items-center justify-between 
                {{#if (eq page 'Courses')}} bg-[#F0BD66] text-white {{else}} bg-white text-gray-700 hover:bg-gray-100{{/if}}">
                <span class="flex items-center text-gray-700 font-medium">

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5 mr-2  {{#if (eq page 'Courses')}}text-white {{else}}text-gray-400{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5" />
                    </svg>

                    Courses
                </span>
                <svg id="courses-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                    class="size-5 text-gray-400">
                    <path fill-rule="evenodd"
                        d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
                        clip-rule="evenodd" />
                </svg>

            </div>


            <div id="courses-dropdown"
                class="{{#if courses.length}}block{{else}}hidden{{/if}} ml-6 mt-2 space-y-2 transition-all duration-300">
                {{#if courses.length}}
                {{#each courses}}
                <a href="/main/courses/{{this._id}}"
                    class="flex items-center  text-sm shadow-md font-medium rounded-lg px-3 py-2
                            {{#if (eq ../selectedCourse this._id)}} bg-[#F0BD66] text-white {{else}} text-gray-700 hover:bg-gray-100{{/if}}">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor"
                        class="size-4 mr-2  {{#if (eq ../selectedCourse this._id)}} text-white {{else}}text-gray-400{{/if}}">

                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6v-3Z" />
                    </svg>

                    {{this.course_id}} {{this.course_name}}
                </a>
                {{/each}}
                {{else}}
                <p class="text-gray-400 text-sm ml-2">No courses available</p>
                {{/if}}
            </div>

            {{#if (eq user.role 'professor')}}
            <div id="management-toggle"
                class="   w-full text-left block  shadow-md hover:cursor-pointer  rounded-xl px-4 py-3 flex items-center justify-between 
                {{#if (eq page 'Management')}} bg-[#F0BD66] text-white {{else}} bg-white text-gray-700 hover:bg-gray-100{{/if}}">
                <span class="flex items-center text-gray-700 font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5 mr-2  {{#if (eq page 'Management')}}text-white {{else}}text-gray-400{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M2.25 7.125C2.25 6.504 2.754 6 3.375 6h6c.621 0 1.125.504 1.125 1.125v3.75c0 .621-.504 1.125-1.125 1.125h-6a1.125 1.125 0 0 1-1.125-1.125v-3.75ZM14.25 8.625c0-.621.504-1.125 1.125-1.125h5.25c.621 0 1.125.504 1.125 1.125v8.25c0 .621-.504 1.125-1.125 1.125h-5.25a1.125 1.125 0 0 1-1.125-1.125v-8.25ZM3.75 16.125c0-.621.504-1.125 1.125-1.125h5.25c.621 0 1.125.504 1.125 1.125v2.25c0 .621-.504 1.125-1.125 1.125h-5.25a1.125 1.125 0 0 1-1.125-1.125v-2.25Z" />
                    </svg>

                    Management
                </span>
                <svg id="management-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                    class="size-5 text-gray-400">
                    <path fill-rule="evenodd"
                        d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
                        clip-rule="evenodd" />
                </svg>

            </div>

            <div id="management-dropdown" class="   ml-6 mt-2 space-y-2 transition-all duration-300">

                <a href="/main/management/course"
                    class="flex items-center  text-sm  shadow-md font-medium rounded-lg px-3 py-2
                            {{#if (eq page 'Course Management')}} bg-[#F0BD66] text-white {{else}} text-gray-700 hover:bg-gray-100{{/if}}">

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor"
                        class="size-4 mr-2  {{#if (eq page 'Course Management')}} text-white {{else}}text-gray-400{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 0 1 0 3.75H5.625a1.875 1.875 0 0 1 0-3.75Z" />
                    </svg>


                    Course Management
                </a>

                <a href="/main/management/student"
                    class="flex items-center  text-sm  shadow-md font-medium rounded-lg px-3 py-2
                            {{#if (eq page 'Student Management')}} bg-[#F0BD66] text-white {{else}} text-gray-700 hover:bg-gray-100{{/if}}">

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor"
                        class="size-4 mr-2  {{#if (eq page 'Student Management')}}  text-white {{else}}text-gray-400{{/if}}">

                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                    </svg>


                    Student Management
                </a>


            </div>
            {{/if}}

            {{#if (eq user.role 'professor')}}

            <a href="/main/analytics"
                class="w-full text-left block  shadow-md  rounded-xl px-4 py-3 flex items-center justify-between {{#if (eq page 'Analytics')}} bg-[#F0BD66] text-white {{else}} bg-white text-gray-700 hover:bg-gray-100{{/if}}">
                <span class="flex items-center font-medium">

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5 mr-2  {{#if (eq page 'Analytics')}}text-white {{else}}text-gray-400{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M3.75 3v11.25A2.25 2.25 0 0 0 6 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0 1 18 16.5h-2.25m-7.5 0h7.5m-7.5 0-1 3m8.5-3 1 3m0 0 .5 1.5m-.5-1.5h-9.5m0 0-.5 1.5m.75-9 3-3 2.148 2.148A12.061 12.061 0 0 1 16.5 7.605" />
                    </svg>

                    Analytics
                </span>
            </a>
            {{/if}}

            <a href="/main/profile"
                class="w-full text-left block  shadow-md  rounded-xl px-4 py-3 flex items-center justify-between {{#if (eq page 'Profile')}} bg-[#F0BD66] text-white {{else}} bg-white text-gray-700 hover:bg-gray-100{{/if}}">
                <span class="flex items-center  font-medium">

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5 mr-2  {{#if (eq page 'Profile')}}text-white {{else}}text-gray-400{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>

                    Profile
                </span>
            </a>


        </div>
    </div>

    <div>
        <a href="/auth/sign-out"
            class="w-full text-left block bg-transparent border border-red-500 shadow-md hover:bg-red-100 rounded-xl  py-3 flex items-center justify-center">
            <span class="flex items-center justify-center w-full text-red-500 font-medium">


                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                    class="w-5 h-5 mr-2 text-red-500">
                    <path fill-rule="evenodd"
                        d="M10 2.5c-1.31 0-2.526.386-3.546 1.051a.75.75 0 0 1-.82-1.256A8 8 0 0 1 18 9a22.47 22.47 0 0 1-1.228 7.351.75.75 0 1 1-1.417-.49A20.97 20.97 0 0 0 16.5 9 6.5 6.5 0 0 0 10 2.5ZM4.333 4.416a.75.75 0 0 1 .218 1.038A6.466 6.466 0 0 0 3.5 9a7.966 7.966 0 0 1-1.293 4.362.75.75 0 0 1-1.257-.819A6.466 6.466 0 0 0 2 9c0-1.61.476-3.11 1.295-4.365a.75.75 0 0 1 1.038-.219ZM10 6.12a3 3 0 0 0-3.001 3.041 11.455 11.455 0 0 1-2.697 7.24.75.75 0 0 1-1.148-.965A9.957 9.957 0 0 0 5.5 9c0-.028.002-.055.004-.082a4.5 4.5 0 0 1 8.996.084V9.15l-.005.297a.75.75 0 1 1-1.5-.034c.003-.11.004-.219.005-.328a3 3 0 0 0-3-2.965Zm0 2.13a.75.75 0 0 1 .75.75c0 3.51-1.187 6.745-3.181 9.323a.75.75 0 1 1-1.186-.918A13.687 13.687 0 0 0 9.25 9a.75.75 0 0 1 .75-.75Zm3.529 3.698a.75.75 0 0 1 .584.885 18.883 18.883 0 0 1-2.257 5.84.75.75 0 1 1-1.29-.764 17.386 17.386 0 0 0 2.078-5.377.75.75 0 0 1 .885-.584Z"
                        clip-rule="evenodd" />
                </svg>


                Log Out
            </span>
        </a>
    </div>
</div>