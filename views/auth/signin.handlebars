<div class="w-full max-w-2xl px-5 ">
  <div class="bg-white rounded-xl shadow-md p-12 px-20">
    <h1 class="text-3xl font-semibold text-gray-900 text-center mb-3">Sign In</h1>
    <p class="text-gray-400 text-center mb-10">Sign in below to access your account</p>

    <form action="/auth/signin" method="POST" class="space-y-4">
      <div>
        <input type="email" name="email" placeholder="Email Address"
          class="w-full px-4 py-3.5 text-gray-900 placeholder-gray-300 bg-white border-b-2 border-gray-200 focus:border-amber-500 focus:outline-none transition-colors"
          required>
      </div>

      <div>
        <input type="password" name="password" placeholder="Password"
          class="w-full px-4 py-3.5 text-gray-900 placeholder-gray-300 bg-white border-b-2 border-gray-200 focus:border-amber-500 focus:outline-none transition-colors"
          required>
      </div>

      <button type="submit"
        class="w-full mt-6 py-4 text-white font-medium  bg-[#F0BD66] rounded-lg hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200">
        Sign in
      </button>

      <p class="text-center text-sm text-gray-400 mt-6">
        Don't have an account yet?
        <a href="/auth/signup" class="text-[#F0BD66] font-medium hover:text-amber-600 transition-colors">Sign up</a>
      </p>
    </form>
  </div>
</div>